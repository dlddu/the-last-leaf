// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id                 String    @id @default(cuid())
  email                   String    @unique
  password_hash           String
  nickname                String
  created_at              DateTime  @default(now())
  last_active_at          DateTime  @default(now())
  timer_status            String    @default("inactive") // inactive, active, paused
  timer_idle_threshold_sec Int      @default(300) // 5 minutes default

  diaries                 Diary[]
  contacts                Contact[]

  @@map("users")
}

model Diary {
  diary_id    String    @id @default(cuid())
  user_id     String
  content     String    @db.Text
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  user        User      @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("diaries")
}

model Contact {
  contact_id  String    @id @default(cuid())
  user_id     String
  email       String?
  phone       String?

  user        User      @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("contacts")
}
